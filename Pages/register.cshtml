@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!--model und so kann potentiell entfernt werden-->
@model WebApplication1.Pages.IndexModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        @{
            Html.RenderPartial("_links");
        }
        <script src="/js/register.js"></script>
    </head>
    <body>
        <main>
            <div class="loginFrame">
                <div class="loginFrame1">
                    <div class="logoTitle">
                        <a href="/index"><img src="~/images/LogoWhite.svg" /></a>
                        <h1>Azore</h1>
                    </div>
                </div>
                <div class="loginFrame2">
                    <h2>Registrieren</h2>
                    <div class="loginData">
                        <form id="register">
                            <div class="loginInformation">
                                <input type="text" id="username" name="username" placeholder="Benutzername" required>
                                <input type="email" id="email" name="email" placeholder="Email" required>
                                <input type="password" id="password" name="password" placeholder="Passwort" required>
                                <input type="password" id="password" name="password" placeholder="bestätige Passwort" required>
                            </div>
                            <div class="loginApply">
                                <a href="/login">zum Login</a>
                                <button type="submit">Registrieren</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </body>
    </html>
}