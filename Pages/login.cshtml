@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!--model und so kann potentiell entfernt werden-->
@model WebApplication1.Pages.IndexModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        @{
            Html.RenderPartial("_links");
        }
    </head>
    <body>
        <main>
            <div class="loginFrame">
                <h1>Login</h1>
                <div class="loginData">
                    <form>
                        <div class="loginInformation">
                            <input type="email" id="email" name="email" required>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <div class="loginApply">
                            <a href="/register">Passwort vergessen?</a>
                            <button type="submit">Anmelden</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </body>
    </html>
}